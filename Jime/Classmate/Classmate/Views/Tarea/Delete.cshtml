@model Classmate.Models.Tarea

@{
    ViewData["Title"] = "Eliminar Tarea";
}

<h1>Eliminar Tarea</h1>

<h3>¿Estás seguro de que quieres eliminar esta tarea?</h3>
<div>
    <h4>Detalles de la Tarea</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contenido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contenido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tema)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tema)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="fechaOriginal" value="@ViewBag.FechaOriginal" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-controller="Calendario" asp-action="DetallesDia" asp-route-fecha="@ViewBag.FechaOriginal" class="btn btn-secondary">Cancelar</a>
    </form>
</div>