
@model Classmate.Models.Nota
@{
    ViewData["Title"] = "Create";
}
<h1>Crear Nota</h1>
<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @{
            var temas = ViewBag.temas;
        }
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contenido" class="control-label"></label>
<textarea asp-for="Contenido" class="form-control" required></textarea>
                <span asp-validation-for="Contenido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tema" class="control-label"></label>
                <select asp-for="Tema" class="form-control" >
                    @foreach (var aux in temas)
                    {
                        <option>@aux.Tema</option>
                    }
                </select>
                <span asp-validation-for="Tema" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" type="date" required />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Salir</a>
</div>