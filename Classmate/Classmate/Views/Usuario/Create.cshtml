@model Classmate.Models.Usuario

@{
    ViewData["Title"] = "Create";
}


<script>
    document.addEventListener("DOMContentLoaded", function () {
        var navbar = document.querySelector(".navbar");
        if (navbar) {
            navbar.style.display = "none";
        }
    });
</script>

<h1>Classmate</h1>

<h4>Crear cuenta </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre:</label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoUno" class="control-label">Primer apellido:</label>
                <input asp-for="ApellidoUno" class="form-control" required />
                <span asp-validation-for="ApellidoUno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoDos" class="control-label">Segundo apellido:</label>
                <input asp-for="ApellidoDos" class="form-control" />
                <span asp-validation-for="ApellidoDos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreUsuario" class="control-label">Nombre de usuario:</label>
                <input asp-for="NombreUsuario" class="form-control" required />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clave" class="control-label">Contraseña:</label>
                <input asp-for="Clave" class="form-control" type="password" required />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label">Correo:</label>
                <input asp-for="Correo" class="form-control" type="email" required />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Login">Salir</a>
</div>

