@model Classmate.Models.HabitoClass

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Hábito</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Habito" class="control-label"></label>
                <input asp-for="Habito" class="form-control" required/>
                <span asp-validation-for="Habito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Salir</a>
</div>

